{
  "name": "dp-nestjs-template",
  "version": "0.0.0",
  "description": "Application template containing GM conventions and standards",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:ci": "jest --ci --silent --reporters=jest-junit",
    "test:ci:cov": "jest --ci --silent --coverageReporters=lcov --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@types/compression": "0.0.36",
    "@types/cookie-session": "^2.0.36",
    "@types/cors": "^2.8.4",
    "@types/csurf": "^1.9.35",
    "@types/helmet": "0.0.42",
    "@types/nconf": "^0.10.0",
    "@types/winston": "^2.4.4",
    "compression": "^1.7.3",
    "cookie-session": "^1.3.3",
    "cors": "^2.8.5",
    "csurf": "^1.9.0",
    "helmet": "^3.15.1",
    "nconf": "^0.10.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.5",
    "jest": "^23.5.0",
    "jest-junit": "^6.3.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "supertest": "^3.1.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.11.0"
  }
}
